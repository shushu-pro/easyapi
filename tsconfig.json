/// ts项目配置文件
{
  "include": ["./src", "./rollup", "./playground", "./template", "./test"],
  "compilerOptions": {
    "types": ["node", "reflect-metadata"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@dev/easyapi": ["./src/index"],
      "@dev/easyapi/*": ["./src/*"],
      "@ijest": ["./test/index"],
      "@shushu.pro/easyapi": ["./src/index"],
      "@api": ["./template/index"],
      "@api/*": ["./template/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
