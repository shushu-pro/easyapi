{
  "compilerOptions": {
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@/*": ["./src/*"],
      "@dev/easyapi": ["./src/index"],
      "@dev/easyapi/*": ["./src/*"],
      "@ijest": ["./test/index"],
      "@shushu.pro/easyapi": ["./src/index"],
      "@api": ["./template/index"],
      "@api/*": ["./template/*"]
    }
  },
  "include": ["./playground", "./rollup", "./src", "./test", "./template"]
}
