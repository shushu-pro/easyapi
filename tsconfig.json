/// ts项目配置文件
{
  "include": ["./src", "./rollup", "./demo", "./template", "./test"],
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@ijest": ["./test"],
      "@shushu.pro/easyapi": ["./src"],
      "@api": ["./template"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
