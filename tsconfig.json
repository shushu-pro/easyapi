{
  "include": ["./src", "./demo", "./template", "./test"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@shushu.pro/easyapi": ["./src"],
      "@api": ["./template"]
    },
    "types": ["node"],
    "module": "ESNext",
    "target": "ES5",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true
  }
}
